  const isAdmin = user.role === UserRoleEnum.ADMIN;

  return (
    <nav className={`navbar navbar--${variant}`}>
      <h1>{title}</h1>
      {isAdmin && <Button onClick={logout}>Admin Panel</Button>}
    </nav>
  );
};

